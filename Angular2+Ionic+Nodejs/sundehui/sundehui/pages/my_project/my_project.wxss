/* pages/share_list/sharelist.wxss */

.projectList {
    /* background-color: red;       */
  height: 200rpx;
  margin-right: 20rpx;
  border-bottom: 2rpx solid lightgray;
}

.view {
   /* background-color: yellow;     */
  height: 200rpx;
  width: 460rpx;
  float: left;
  margin-left:20rpx;
}

.list_view {
  width: 90%;
  height: 80rpx;
   /* background-color: red;   */
  margin-top: 20rpx;
  margin-left: 10rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.size_change {
  font-size: 30rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.view_inner {
  width: 160rpx;
   /* background-color: green;    */
  height: 80rpx;
  line-height: 65rpx;
}

.view_inner_large {
  width: 250rpx;
}

.text_center {
  text-align: center;
}

.fr0 {
  float: right;
  width: 230rpx;
  height: 200rpx;
  margin-right: 20rpx;
   /* background-color: blue;  */
}

.list_right {
  text-align: center;
  font-size: 38rpx;
  margin-top: 60rpx;
  width: 80%;
  margin-left: 30rpx;
  border-radius: 18rpx;
  border: 1rpx solid lightgray;
}

.plus{
  width:200rpx;
  height:200rpx;
  margin-top:20rpx;
  margin-left:20rpx;
}
.plus_img{
  width:200rpx;
  height:200rpx;
}

/* 插入的创建项目样式 */
.add_project{
  box-sizing: border-box;
  height: 400rpx;
  width: 100%;
  padding-left: 21%;

}

.dashed_box{
  border: 10rpx dashed white;
  background-color: rgba(185,185,185,0.8);
  text-align: center;
  padding-top: 60rpx;
  width:70%;
  height:200rpx;
  border-radius: 10rpx;
  position: relative;
  top: 15%;
}

.plus_icon{
  height: 80rpx;
  width: 80rpx;
}

.add_title{
  font-weight: bold;
  color: white;
}
.tip{
  color: grey;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 300rpx;
}